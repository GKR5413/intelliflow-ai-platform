{
  "dashboard": {
    "id": null,
    "title": "IntelliFlow Platform Overview",
    "tags": ["intelliflow", "platform", "overview"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "templating": {
      "list": [
        {
          "name": "namespace",
          "type": "query",
          "query": "label_values(kube_pod_info, namespace)",
          "regex": "intelliflow.*",
          "includeAll": true,
          "allValue": ".*",
          "current": {
            "value": "intelliflow-prod",
            "text": "intelliflow-prod"
          }
        },
        {
          "name": "service",
          "type": "query",
          "query": "label_values(up{namespace=~\"$namespace\"}, job)",
          "includeAll": true,
          "allValue": ".*",
          "current": {
            "value": "All",
            "text": "All"
          }
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Service Health Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "up{namespace=~\"$namespace\", job=~\"$service\"}",
            "legendFormat": "{{job}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {"text": "DOWN", "color": "red"},
                  "1": {"text": "UP", "color": "green"}
                },
                "type": "value"
              }
            ],
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Request Rate (RPS)",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{namespace=~\"$namespace\", job=~\"$service\"}[5m])) by (job)",
            "legendFormat": "{{job}}"
          }
        ],
        "yAxes": [
          {"label": "Requests per second", "min": 0},
          {"show": false}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Response Time (P95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{namespace=~\"$namespace\", job=~\"$service\"}[5m])) by (job, le))",
            "legendFormat": "{{job}}"
          }
        ],
        "yAxes": [
          {"label": "Seconds", "min": 0},
          {"show": false}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Error Rate (%)",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{namespace=~\"$namespace\", job=~\"$service\", status=~\"5..\"}[5m])) by (job) / sum(rate(http_requests_total{namespace=~\"$namespace\", job=~\"$service\"}[5m])) by (job) * 100",
            "legendFormat": "{{job}}"
          }
        ],
        "yAxes": [
          {"label": "Percentage", "min": 0, "max": 100},
          {"show": false}
        ],
        "thresholds": [
          {"value": 1, "colorMode": "critical", "op": "gt"},
          {"value": 5, "colorMode": "critical", "op": "gt"}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "CPU Usage by Service",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=~\"$namespace\", pod=~\".*\"}[5m])) by (pod) * 100",
            "legendFormat": "{{pod}}"
          }
        ],
        "yAxes": [
          {"label": "CPU %", "min": 0},
          {"show": false}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Memory Usage by Service",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(container_memory_working_set_bytes{namespace=~\"$namespace\", pod=~\".*\"}) by (pod) / 1024 / 1024",
            "legendFormat": "{{pod}}"
          }
        ],
        "yAxes": [
          {"label": "Memory (MB)", "min": 0},
          {"show": false}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 7,
        "title": "Fraud Detection Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(fraud_predictions_total[5m])",
            "legendFormat": "Predictions/sec"
          },
          {
            "expr": "histogram_quantile(0.95, rate(fraud_prediction_duration_seconds_bucket[5m]))",
            "legendFormat": "P95 Latency"
          }
        ],
        "yAxes": [
          {"label": "Predictions/sec", "min": 0},
          {"label": "Latency (s)", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 8,
        "title": "Model Accuracy",
        "type": "stat",
        "targets": [
          {
            "expr": "model_accuracy_score",
            "legendFormat": "{{model_name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0.7},
                {"color": "yellow", "value": 0.8},
                {"color": "green", "value": 0.9}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      },
      {
        "id": 9,
        "title": "Database Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(pg_stat_database_xact_commit[5m])",
            "legendFormat": "Commits/sec"
          },
          {
            "expr": "rate(pg_stat_database_xact_rollback[5m])",
            "legendFormat": "Rollbacks/sec"
          },
          {
            "expr": "pg_stat_activity_count",
            "legendFormat": "Active Connections"
          }
        ],
        "yAxes": [
          {"label": "Transactions/sec", "min": 0},
          {"label": "Connections", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32}
      },
      {
        "id": 10,
        "title": "Message Queue Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(kafka_server_brokertopicmetrics_messages_in_total[5m])",
            "legendFormat": "Messages In/sec"
          },
          {
            "expr": "rate(kafka_server_brokertopicmetrics_messages_out_total[5m])",
            "legendFormat": "Messages Out/sec"
          },
          {
            "expr": "kafka_consumer_lag_max",
            "legendFormat": "Consumer Lag"
          }
        ],
        "yAxes": [
          {"label": "Messages/sec", "min": 0},
          {"label": "Lag", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32}
      },
      {
        "id": 11,
        "title": "Business Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(transaction_processing_total[5m])",
            "legendFormat": "Transactions/sec"
          },
          {
            "expr": "rate(fraud_detected_total[5m])",
            "legendFormat": "Fraud Detected/sec"
          },
          {
            "expr": "rate(user_registrations_total[5m])",
            "legendFormat": "User Registrations/sec"
          }
        ],
        "yAxes": [
          {"label": "Events/sec", "min": 0},
          {"show": false}
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 40}
      },
      {
        "id": 12,
        "title": "System Resources",
        "type": "graph",
        "targets": [
          {
            "expr": "100 - (avg(rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU Usage %"
          },
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "Memory Usage %"
          },
          {
            "expr": "(1 - (node_filesystem_avail_bytes{fstype!=\"tmpfs\"} / node_filesystem_size_bytes{fstype!=\"tmpfs\"})) * 100",
            "legendFormat": "Disk Usage %"
          }
        ],
        "yAxes": [
          {"label": "Percentage", "min": 0, "max": 100},
          {"show": false}
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 48}
      },
      {
        "id": 13,
        "title": "Network Traffic",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(node_network_receive_bytes_total{device!=\"lo\"}[5m]) * 8",
            "legendFormat": "Inbound {{device}}"
          },
          {
            "expr": "rate(node_network_transmit_bytes_total{device!=\"lo\"}[5m]) * 8",
            "legendFormat": "Outbound {{device}}"
          }
        ],
        "yAxes": [
          {"label": "Bits per second", "min": 0},
          {"show": false}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 56}
      },
      {
        "id": 14,
        "title": "Pod Status",
        "type": "table",
        "targets": [
          {
            "expr": "kube_pod_info{namespace=~\"$namespace\"}",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"__name__": true, "job": true, "instance": true},
              "renameByName": {
                "pod": "Pod Name",
                "namespace": "Namespace",
                "node": "Node",
                "created_by_name": "Created By"
              }
            }
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 56}
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "increase(deployment_revision[1h])",
          "iconColor": "blue",
          "titleFormat": "Deployment: {{service}}"
        }
      ]
    }
  }
}
